<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 상단 테두리 -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#000000"
                android:dashWidth="4dp"
                android:dashGap="4dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- 나머지 세 면의 투명 테두리 -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>

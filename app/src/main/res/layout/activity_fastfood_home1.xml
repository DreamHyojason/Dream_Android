<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fastfoods.FastFoodHome1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner" />


        <TextView
            android:id="@+id/fastfoodhom1_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="center_horizontal|center_vertical"
            android:text="원하시는 결제방식을 선택해주세요"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="150dp" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="346dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:columnCount="3"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fastfoodhom1_text1"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/button1"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_marginRight="10dp"
                android:background="#EABA3D"
                android:fontFamily="@font/poppins_bold"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/ion_card1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="카드"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="신용/체크카드"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button2"
                android:layout_width="180dp"
                android:layout_height="175dp"
                android:background="#D9D9D9"
                android:fontFamily="@font/poppins_bold"
                android:orientation="vertical"
                android:text="카드">

                <GridLayout
                    android:id="@+id/gridLayout_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    tools:ignore="DuplicateIds">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="2"
                        android:layout_columnSpan="2"
                        android:layout_gravity="fill"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ri_coupon_line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="쿠폰/교환권"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="롯데리아\n제품교환권(지류)\n모바일제품교환권"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                </GridLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/button3"
                android:layout_width="180dp"
                android:layout_height="164dp"
                android:layout_marginTop="10dp"
                android:background="#D9D9D9"
                android:fontFamily="@font/poppins_bold"
                android:orientation="vertical"
                android:text="카드">

                <GridLayout
                    android:id="@+id/gridLayout_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_rowSpan="2"
                        android:layout_columnSpan="2"
                        android:layout_gravity="fill"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/fa_won" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="현금 (후결제)"
                        android:textColor="#6B6B6B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="본 매장은 현금 없는\n매장으로 다른 결제\n방법을 선택해주세요."
                        android:textColor="#6B6B6B"
                        android:textSize="10dp" />

                </GridLayout>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"

        android:layout_height="60dp"
        android:background="#D9D9D9"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:src="@drawable/speaker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="직원호출"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/beforeButton"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:src="@drawable/left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_extrabold"
                android:text="이전"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="160dp"
            android:id="@+id/sale"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/sale" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center_vertical"
                android:text="할인행사안내">


            </TextView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fastfoods.Activity.Home.FastFoodHome1Activity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/FastFoodHome"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/hyoja_home"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/fastfoodhom1_text1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="center"
            android:text="원하시는 결제방식을 선택해주세요"
            android:textSize="25dp"
            android:maxLines="1"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_lightyellow_back_rounded"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="100dp"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/ion_card1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="카드"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:maxLines="1"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="신용/체크카드"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:maxLines="1"
                            android:autoSizeMaxTextSize="15dp"
                            android:autoSizeMinTextSize="15dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/layout_border2_gray"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        >

                        <LinearLayout
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ri_coupon_line"
                                android:layout_weight="1.1"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_weight="0.6"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:text="쿠폰/교환권"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    />
                                <TextView
                                    android:layout_weight="1.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:text="롯데리아\n제품교환권\n모바일제품교환권"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:autoSizeMaxTextSize="15dp"
                                    android:autoSizeMinTextSize="15dp"
                                    android:gravity="center"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/layout_border2_gray"
                    >

                    <LinearLayout
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/fa_won"
                            android:layout_weight="1.1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_weight="0.6"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="현금 (후결제)"
                                android:textSize="15dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="#6B6B6B"
                                android:gravity="center"
                                />
                            <TextView
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textSize="15dp"
                                android:text="본 매장은 현금 없는 매장으로 다른 결제 방법을 선택해주세요."
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:autoSizeMaxTextSize="15dp"
                                android:autoSizeMinTextSize="15dp"
                                android:textColor="#6B6B6B"
                                />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"/>





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

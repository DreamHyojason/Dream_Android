<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:background="@color/cafe_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cafe.CafeHomeActivity">
    <LinearLayout
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="left|center"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hyoja_home" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="카드/모바일 쿠폰 결제 전용"
                android:textColor="@color/cafe_darkRed"
                android:textSize="20dp" />
        </FrameLayout>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_bold"
            android:text="현금, 기타 결제 및 할인이 필요하신 경우,\n 카운터를 이용해주세요."
            android:textColor="@color/cafe_darkRed"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:scaleType="fitXY"
        android:layout_weight="3.5"
        android:id="@+id/cafehome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/cafe_home" />

    <FrameLayout
        android:background="@color/cafe_darkRed"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/for_here"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="매장에서 먹어요"
                android:textAlignment="center"
                android:textSize="13dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/button_round"
                android:textColor="@color/cafe_white"
                app:backgroundTint="@null"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/to_go"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_round"
                app:backgroundTint="@null"
                android:text="포장해서 갈래요"
                android:textColor="@color/cafe_white"
                android:textSize="13dp"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintStart_toEndOf="@+id/for_here"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/for_here"
                app:layout_constraintBottom_toBottomOf="@+id/for_here" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center|top"
            android:textAlignment="center"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="맛있는 음료와 베이커리\n정성껏 준비해드리겠습니다."
            android:textColor="@color/cafe_white"
            android:textSize="12dp"/>

    </FrameLayout>



</LinearLayout>


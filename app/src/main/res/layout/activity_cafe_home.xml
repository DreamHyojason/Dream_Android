<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cafe.CafeHomeActivity">

    <ImageView
        android:id="@+id/cafehome"
        android:layout_width="509dp"
        android:layout_height="539dp"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cafe_home" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-6dp"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:text="카드/모바일 쿠폰 결제 전용"
            android:textColor="@color/cafe_darkRed"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ibm_plex_sans_kr_bold"
            android:text="현금, 기타 결제 및 할인이 필요하신 경우,\n 카운터를 이용해주세요."
            android:textColor="@color/cafe_darkRed"
            android:textSize="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hyoja_home" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/cafe_darkRed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/for_here"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="매장에서 먹어요"
        android:textSize="10sp"
        android:background="@drawable/button_round"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/to_go"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintBottom_toBottomOf="@+id/view2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/to_go"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_round"
        app:backgroundTint="@null"
        android:text="포장해서 갈래요"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/for_here"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/for_here"
        app:layout_constraintBottom_toBottomOf="@+id/for_here" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ibm_plex_sans_kr_bold"
        android:text="맛있는 음료와 베이커리\n정성껏 준비해드리겠습니다."
        android:textColor="@color/cafe_white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintBottom_toTopOf="@+id/for_here"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/korLang"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:text="한국어"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:backgroundTint="@color/cafe_gray"
        app:layout_constraintTop_toBottomOf="@+id/for_here"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/engLang"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:text="ENG"
        android:textSize="10sp"
        android:backgroundTint="@color/cafe_skyblue"
        app:layout_constraintTop_toTopOf="@+id/korLang"
        app:layout_constraintStart_toEndOf="@+id/korLang"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


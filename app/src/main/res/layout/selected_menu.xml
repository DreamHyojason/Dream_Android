<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/selectedOrderItemBar1"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!--                        선택 메뉴 이름    -->
        <TextView
            android:id="@+id/selectedItemName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="데리버거"
            android:textColor="@color/black"></TextView>

        <!--                        선택 메뉴 개수    -->
        <TextView
            android:id="@+id/selectedItemCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="1"
            android:textColor="@color/black"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/layout_border6"
                android:padding="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/up_tri"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/layout_border6"
                android:padding="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/down_tri"></ImageView>
            </LinearLayout>


        </LinearLayout>

        <!--                        선택 메뉴 가격-->
        <TextView
            android:id="@+id/selectedItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="3,300"
            android:textAlignment="center"
            android:textColor="@color/black"></TextView>

        <!--                        토핑추가-->
        <LinearLayout
            android:id="@+id/selectedItemAddToping"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_rounded_darkred">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:text="토핑추가"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--            변경    -->
            <LinearLayout
                android:id="@+id/selectedItemEdit"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/layout_border5_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="변경"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

            </LinearLayout>

            <!--            삭제    -->
            <LinearLayout
                android:id="@+id/seletecItemDelete"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/layout_border5_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="삭제"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
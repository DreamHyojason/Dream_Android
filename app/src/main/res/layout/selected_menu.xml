<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/selectedOrderItemBar1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:layout_weight="1.4">
           <!--                        선택 메뉴 이름    -->
           <TextView
               android:id="@+id/selectedItemName"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:layout_weight="1.2"
               android:fontFamily="@font/poppins_extrabold"
               android:gravity="center_vertical"
               android:text="데리버거"
               android:autoSizeTextType="uniform"
               android:textColor="@color/black"></TextView>

           <!--                        선택 메뉴 개수    -->
           <TextView
               android:id="@+id/selectedItemCount"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="0.5"
               android:fontFamily="@font/poppins_bold"
               android:gravity="center"
               android:padding="5dp"
               android:text="1"
               android:autoSizeTextType="uniform"
               android:textColor="@color/black"></TextView>

           <LinearLayout
               android:layout_weight="0.3"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:background="@drawable/layout_border6"
                   android:padding="5dp">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:src="@drawable/up_tri"></ImageView>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:background="@drawable/layout_border6"
                   android:padding="5dp">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:src="@drawable/down_tri"></ImageView>
               </LinearLayout>


           </LinearLayout>

           <!--                        선택 메뉴 가격-->
           <TextView
               android:layout_weight="0.8"
               android:id="@+id/selectedItemPrice"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:fontFamily="@font/poppins_bold"
               android:gravity="center"
               android:padding="5dp"
               android:autoSizeTextType="uniform"
               android:text="3,300"
               android:textAlignment="center"
               android:textColor="@color/black">

           </TextView>
       </LinearLayout>

        <!--                        토핑추가-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/selectedItemAddToping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/layout_rounded_darkred">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="토핑추가"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:autoSizeTextType="uniform"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--            변경    -->
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/selectedItemEdit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_border5_gray">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="변경"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"

                        >

                    </TextView>

                </LinearLayout>

                <!--            삭제    -->
                <LinearLayout
                    android:id="@+id/seletecItemDelete"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_border5_gray">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="삭제"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"

                        >

                    </TextView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cafe_white"
    tools:context=".cafe.fragment.OptionAddFragment">


    <LinearLayout
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:text="시럽 추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/syrupAdd"
            android:textColor="@color/cafe_darkRed"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"

            android:background="@drawable/hot_button_unclicked"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="추가"
            android:layout_width="70dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="얼음 추가"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/iceAdd"
            android:textColor="@color/cafe_darkRed"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"

            android:background="@drawable/hot_button_unclicked"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="추가"
            android:layout_width="70dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:id="@+id/cancel"
            android:textColor="@color/cafe_skyblue"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"

            android:background="@drawable/iced_button_unclicked"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="취소"
            android:layout_width="70dp"
            android:layout_height="40dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/complete"
            android:textColor="@color/cafe_white"
            android:textAlignment="center"
            android:background="@drawable/hot_button_clicked"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"

            android:text="완료"
            android:layout_width="70dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_rounded_white"
        android:backgroundTint="@color/white"


        >

        <!--전체-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F6D492"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_marginLeft="33dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세트로 드시겠어요?"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="20dp"
                    android:textColor="@color/black"

                    >

                </TextView>

                <ImageView
                    android:id="@+id/dialog_x_button"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/x"
                    android:background="@drawable/layout_transparent_back_blue">

                </ImageView>



            </LinearLayout>

            <!--        세트, 버거 선택 칸-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rowCount="1"
                    android:columnCount="2"
                    android:padding="10dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    >

                    <!--1 더블불고기버거-->
                    <GridLayout
                        android:id="@+id/only_burger_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:rowCount="2"
                        android:columnCount="1"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        >

                        <GridLayout
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:id="@+id/only_burger_image_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_gravity="center"
                            android:rowCount="2"
                            android:columnCount="1"
                            android:orientation="vertical"
                            android:background="@drawable/layout_transparent_back_yellow_border"
                            >

                            <ImageView
                                android:paddingTop="5dp"
                                android:id="@+id/only_burger_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/burger1" />

                            <TextView
                                android:id="@+id/only_burger_text"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/poppins_extrabold"
                                android:layout_gravity="center"
                                android:text="버거만"
                                android:textSize="15dp"
                                android:textColor="@color/black" />


                        </GridLayout>



                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/only_burger_price"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/poppins_extrabold"
                            android:layout_gravity="center"
                            android:text="3,300"
                            android:textSize="15dp"
                            android:textColor="#D00000" />


                    </GridLayout>

                    <!--2 피쉬버거-->
                    <GridLayout
                        android:id="@+id/set_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:rowCount="2"
                        android:columnCount="1"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"

                        >

                        <GridLayout
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:id="@+id/set_image_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_gravity="center"
                            android:rowCount="2"
                            android:columnCount="1"
                            android:orientation="vertical"
                            android:background="@drawable/layout_transparent_back_yellow_border"
                            >

                            <ImageView
                                android:paddingTop="5dp"
                                android:id="@+id/set_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/burger1" />

                            <TextView
                                android:id="@+id/set_text"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/poppins_extrabold"
                                android:layout_gravity="center"
                                android:text="세트"
                                android:textSize="15dp"
                                android:textColor="@color/black" />


                        </GridLayout>



                        <TextView
                            android:layout_marginTop="2dp"

                            android:id="@+id/set_price"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/poppins_extrabold"
                            android:layout_gravity="center"
                            android:text="6,300"
                            android:textSize="15dp"
                            android:textColor="#D00000" />


                    </GridLayout>

                    <!--3, 새우버거-->

                </GridLayout>
            </LinearLayout>



        </LinearLayout>


        <!-- "X" 버튼 -->
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/layout_before_btn"

            />

    </LinearLayout>


</FrameLayout>

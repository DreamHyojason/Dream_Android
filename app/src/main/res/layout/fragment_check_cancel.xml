<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layout_dart_gray_thick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F9E0AE"
            android:orientation="horizontal"

            >

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="알림"
                android:fontFamily="@font/poppins_extrabold"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"

                >

            </TextView>

        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="결제를 취소하시겠습니까?"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            />

        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="15dp"
                >

                <LinearLayout
                    android:id="@+id/cancel_button_yes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layout_lightyellow_back_rounded"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="예"
                        android:fontFamily="@font/poppins_extrabold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cancel_button_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layout_border5_gray"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="아니오"
                        android:fontFamily="@font/poppins_extrabold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"

                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@color/black"
    android:background="@color/cafe_white"
    tools:context=".cafe.fragment.SavingPointFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginHorizontal="20dp"
                android:gravity="center|left|bottom"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:text="결제 방식을 선택해주세요!"/>

        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/mobile"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/cafe_darkRed"
                android:gravity="center"
                android:text = "모바일\n페이"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="13dp"
                android:autoSizeMaxTextSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="10dp"
                android:background="@drawable/square_border_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/card"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/cafe_darkRed"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="13dp"
                android:autoSizeMaxTextSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text = "카드\n결제"
                android:layout_margin="10dp"
                android:background="@drawable/square_border_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/coupon"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/cafe_darkRed"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="13dp"
                android:autoSizeMaxTextSize="15dp"
                android:text = "쿠폰"
                android:layout_margin="10dp"
                android:background="@drawable/square_border_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/gift"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/cafe_darkRed"
                android:gravity="center"
                android:textAlignment="center"
                android:text = "기프트카드"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="13dp"
                android:autoSizeMaxTextSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="10dp"
                android:background="@drawable/square_border_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
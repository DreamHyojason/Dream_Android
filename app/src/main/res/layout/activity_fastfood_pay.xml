<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fastfoods.FastFoodPayActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!--빨간 배경-->
            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#A81717">

                <!--흰색 배경-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    >

                    <TextView
                        android:id="@+id/textView"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="고객님들의\n안전과 질병 예방을 위해\n무인포스는 매시간 살균, 소독을\n실시하고 있습니다."
                        android:fontFamily="@font/poppins_extrabold"
                        android:textColor="@color/black"
                        tools:ignore="RtlCompat">
                    </TextView>

                </LinearLayout>
            </LinearLayout>
            <!--TitleScrollView-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_weight="8.3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="#EEEEEE"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="제품"
                                android:fontFamily="@font/poppins_extrabold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_weight="1">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="수량"
                                android:fontFamily="@font/poppins_extrabold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_weight="1.4">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="금액"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_extrabold"
                                android:gravity="center"
                                android:layout_weight="1.2">

                            </TextView>


                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_weight="3.5"
                            android:id="@+id/FoodSelectedList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_weight="6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="30dp"
                            >
                            <LinearLayout
                                android:layout_weight="5.6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/layout_shadow"
                                >

                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="총주문금액"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/black"
                                    android:gravity="center|left"
                                    />
                                <TextView
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/payTotalPrice"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="9000"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/black"
                                    android:gravity="center|right"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/layout_shadow"
                                android:layout_weight="5.6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="할인금액"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/black"
                                    android:gravity="center|left"
                                    />
                                <TextView
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/payDiscountPrice"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="0"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/black"
                                    android:gravity="center|right"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_weight="5.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="#F6D492"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="결제할 금액"
                                android:gravity="center|left"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_extrabold">
                            </TextView>

                            <TextView
                                android:id="@+id/haveToPayPrice"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="9000"
                                android:gravity="center|right"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/cafe_darkRed"
                                android:fontFamily="@font/poppins_extrabold">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="5.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="결제한 금액"
                                android:gravity="center|left"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_extrabold">
                            </TextView>

                            <TextView
                                android:id="@+id/PaiedPrice"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="0"
                                android:gravity="center|right"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/cafe_darkRed"
                                android:fontFamily="@font/poppins_extrabold">
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.4"
                            android:orientation="vertical"
                            android:background="@drawable/layout_border_lightgray"
                            >
                            <LinearLayout
                                android:layout_margin="2dp"
                                android:layout_weight="4.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/layout_top_round_lightgray"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="결제종류"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:layout_weight="1">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="금액"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:layout_weight="1">

                                </TextView>

                            </LinearLayout>
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="포장"
                                        android:fontFamily="@font/poppins_extrabold"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:layout_weight="1"/>
                                    <TextView
                                        android:id="@+id/PayTotalPrice2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="포장"
                                        android:fontFamily="@font/poppins_extrabold"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:layout_weight="1"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layout_lightgray_5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_weight="1.2"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/layout_border_red"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_margin="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/cafe_darkRed">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="STEP 1    포장을 선택하세요"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/white"
                                    android:gravity="center|left"
                                    android:textSize="13dp"
                                    android:layout_marginLeft="5dp"/>

                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                >

                                <LinearLayout
                                    android:layout_margin="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    >

                                    <ImageView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/shop"
                                        />
                                    <TextView
                                        android:layout_weight="1.4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="포장"
                                        android:fontFamily="@font/poppins_extrabold"
                                        android:textColor="@color/black"
                                        android:gravity="center"/>

                                    <TextView
                                        android:layout_weight="1.4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="(1회용기 제공)"
                                        android:textSize="10dp"
                                        android:fontFamily="@font/poppins_extrabold"
                                        android:textColor="@color/black"
                                        android:gravity="center"/>


                                </LinearLayout>

                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"

                                    android:layout_weight="1.99"
                                    android:background="#AAAAAA"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/bag"
                                            />
                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="매장"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="(다회용기 제공)"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/layout_darkgray_5dp"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_margin="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5.5"
                                android:background="#979797"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="STEP2    할인/적립을 선택하세요"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/white"
                                    android:gravity="center|left"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="5dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/barcode"
                                            />

                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="롯데잇츠APP\nONE바코드"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>
                                    <ImageView
                                        android:layout_marginTop="10dp"

                                        android:layout_weight="1.99"
                                        android:background="#AAAAAA"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/join"
                                            />
                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="제휴사\n할인"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>

                                </LinearLayout>

                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="#AAAAAA"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"/>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/point"
                                            />

                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="L.POINT\n적립/사용"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>
                                    <ImageView
                                        android:layout_marginBottom="10dp"

                                        android:layout_weight="1.99"
                                        android:background="#AAAAAA"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/no"
                                            />

                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="선택없음\n/결제하기"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/layout_darkgray_5dp"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_margin="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5.5"
                                android:background="#979797"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="STEP 3      결제를 선택하세요"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/white"
                                    android:gravity="center|left"
                                    android:textSize="13dp"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/card"
                                            />

                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="신용/체크카드"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>
                                    <ImageView
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1.99"
                                        android:background="#AAAAAA"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/barcode_line"
                                            />
                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="모바일/바코드\n페이류(PAY)"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>

                                </LinearLayout>
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="#AAAAAA"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"/>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/lpay"
                                            />

                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="LPAY"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>
                                    <ImageView
                                        android:layout_marginBottom="10dp"

                                        android:layout_weight="1.99"
                                        android:background="#AAAAAA"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                    <LinearLayout
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <ImageView
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/tmoney"
                                            />

                                        <TextView
                                            android:layout_weight="1.4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="선택없음\n/결제하기"
                                            android:textSize="10dp"
                                            android:fontFamily="@font/poppins_extrabold"
                                            android:textColor="@color/black"
                                            android:gravity="center"/>


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!--<Here>-->

        <!--bottom bar-->
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_weight="13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9D9D9"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <!--직원 호출-->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:src="@drawable/speaker" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="직원호출"
                        android:gravity="center"
                        android:textColor="@color/black"
                        >

                    </TextView>

                </LinearLayout>
                <!--이전-->
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/beforeButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:src="@drawable/left_round" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="이전"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        >

                    </TextView>

                </LinearLayout>
            </LinearLayout>
            <!--취소하기-->
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_border4_darkgray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="취소하기"
                    android:textSize="20dp"
                    android:gravity="center"
                    tools:ignore="RtlCompat"></TextView>

            </LinearLayout>
            <!--결제하기-->
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/payment_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_border1_yellow"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PayBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textColor="@color/black"
                    android:text="결제하기"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:gravity="center"
                    tools:ignore="RtlCompat"></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>


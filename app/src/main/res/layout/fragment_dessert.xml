    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        >


        <!--1 포테이토-->
        <GridLayout
            android:id="@+id/dessert1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_marginRight="10dp"
                android:src="@drawable/dessert1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="포테이토"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="1800~"
                android:textColor="#D00000"
                android:textSize="20dp" />

        </GridLayout>

        <!--2 양념감자-->
        <GridLayout
            android:id="@+id/dessert2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_marginRight="10dp"
                android:src="@drawable/dessert2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="양념감자"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:fontFamily="@font/poppins_bold"
                android:text="2300~"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#D00000"
                android:textSize="20dp" />

        </GridLayout>

        <!--3, 웨지 포테이토-->
        <GridLayout
            android:id="@+id/dessert3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_marginRight="10dp"
                android:src="@drawable/dessert3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="웨지포테이토"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:fontFamily="@font/poppins_bold"
                android:text="2100~"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#D00000"
                android:textSize="20dp" />

        </GridLayout>

        <!--4,치즈스틱-->
        <GridLayout
            android:id="@+id/dessert4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_marginRight="10dp"
                android:src="@drawable/dessert4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="치즈스틱"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:fontFamily="@font/poppins_bold"
                android:text="2400~"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#D00000"
                android:textSize="20dp" />

        </GridLayout>

        <!--5, 통오징어링-->
        <GridLayout
            android:id="@+id/dessert5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:columnCount="3"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_marginRight="10dp"
                android:src="@drawable/dessert5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="통오징어링"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:fontFamily="@font/poppins_bold"
                android:text="2600~"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#D00000"
                android:textSize="20dp" />

        </GridLayout>


        <GridLayout
            android:id="@+id/dessert6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:columnCount="3"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_marginRight="10dp"
                android:src="@drawable/dessert6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="모짜크림치즈볼"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:fontFamily="@font/poppins_bold"
                android:text="2300~"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#D00000"
                android:textSize="20dp" />

        </GridLayout>

    </GridLayout>

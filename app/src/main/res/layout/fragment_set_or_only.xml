<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layout_rounded_white"
        >

        <!--전체-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F6D492"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_marginLeft="33dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="세트로 드시겠어요?"
                    android:fontFamily="@font/poppins_extrabold"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"

                    >

                </TextView>

                <ImageView
                    android:id="@+id/dialog_x_button"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/x"
                    android:background="@drawable/layout_transparent_back_blue">

                </ImageView>



            </LinearLayout>

            <!--        세트, 버거 선택 칸-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/optionOnlyBurger"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:background="@drawable/layout_transparent_back_yellow_border"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:id="@+id/optionOnlyBurger_image"
                            android:layout_weight="2.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/burger1"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="버거만"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/optionOnlyBurger_price"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="3300"
                        android:gravity="center"
                        android:textColor="@color/cafe_darkRed"
                        android:fontFamily="@font/poppins_extrabold"/>

                </LinearLayout>
                <LinearLayout

                    android:id="@+id/optionSetBurger"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:background="@drawable/layout_transparent_back_yellow_border"
                        android:padding="5dp"
                        >
                        <ImageView
                            android:id="@+id/optionSetBurger_image"
                            android:layout_weight="2.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/burger1"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="세트"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/optionSetBurger_price"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="3300"
                        android:gravity="center"
                        android:textColor="@color/cafe_darkRed"
                        android:fontFamily="@font/poppins_extrabold"/>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


        <!-- "X" 버튼 -->
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/layout_before_btn"

            />

    </LinearLayout>

</LinearLayout>
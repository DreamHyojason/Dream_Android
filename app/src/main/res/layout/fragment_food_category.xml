<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodCategoryFragment">

    <LinearLayout
        android:background="#EAC9C9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryBtn1_lunch"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_indicator_default"
            android:fontFamily="@font/poppins_extrabold"

            android:text="든든점심"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryBtn2_hamburger"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_indicator_default"
            android:fontFamily="@font/poppins_extrabold"

            android:text="햄버거"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryBtn3_dessert"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_indicator_default"
            android:fontFamily="@font/poppins_extrabold"

            android:text="디저트/치킨"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categoryBtn4_drink"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_indicator_default"
            android:fontFamily="@font/poppins_extrabold"
            android:text="드링크"/>

    </LinearLayout>

</FrameLayout>
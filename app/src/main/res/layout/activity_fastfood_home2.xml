                    <FrameLayout
                        android:background="#EAC9C9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.viewpager2.widget.ViewPager2
                            android:background="@drawable/border_line"
                            android:id="@+id/FastFoodCategoryList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </FrameLayout>

                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/TabTitleRightBtn"
                    android:layout_marginRight="5dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_round"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/FoodMenuList"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/FoodMenuListListLeftButton"
                    android:background="@null"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:src="@drawable/icon_left_un"
                    android:layout_margin="5dp"
                    android:layout_gravity="left|center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageButton
                    android:id="@+id/FoodMenuListListRightButton"
                    android:background="@null"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:src="@drawable/icon_right"
                    android:layout_margin="5dp"
                    android:layout_gravity="right|center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </FrameLayout>

<!--            총주문내역-->
            <LinearLayout
                android:id="@+id/totalOrderCountBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="#D9D9D9"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/totalOrderedList"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="총주문내역"
                    android:paddingLeft="16dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    >

                </TextView>

                <TextView
                    android:id="@+id/SelectedOrderCount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="0개"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"

                    >

                </TextView>

                <TextView
                    android:id="@+id/SelectedOrderPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="23dp"
                    android:textColor="#D00000"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingRight="16dp"
                    >

                </TextView>
            </LinearLayout>

<!--            선택한 메뉴 저장 Bar-->
            <LinearLayout
                android:id="@+id/SelectedOrderBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_weight="2"
                android:orientation="horizontal"
                >

<!--            선택 메뉴 저장 칸 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="130"
                    android:background="@color/white">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/nestedScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/selectedItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/selectedOrderItemBar1"
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:orientation="horizontal"
                                >

<!--                        선택 메뉴 이름    -->
                                <TextView
                                    android:id="@+id/selectedItemName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="데리버거"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/black"
                                    android:padding="5dp"
                                    android:layout_weight="4"
                                    >
                                </TextView>

<!--                        선택 메뉴 개수    -->
                                <TextView
                                    android:id="@+id/selectedItemCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="1"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/black"
                                    android:padding="5dp"
                                    android:layout_weight="1"
                                    >
                                </TextView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >

                                    <LinearLayout
                                        android:layout_gravity="center"
                                        android:layout_width="20dp"
                                        android:layout_height="10dp"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:background="@drawable/layout_border6"
                                        >
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/up_tri"
                                            android:layout_gravity="center">
                                        </ImageView>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_gravity="center"
                                        android:layout_width="20dp"
                                        android:layout_height="10dp"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:background="@drawable/layout_border6"
                                        >
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/down_tri"
                                            android:layout_gravity="center">
                                        </ImageView>
                                    </LinearLayout>


                                </LinearLayout>

<!--                        선택 메뉴 가격-->
                                <TextView
                                    android:id="@+id/selectedItemPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="3,300"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/black"
                                    android:padding="5dp"
                                    android:textAlignment="center"
                                    android:layout_weight="1"
                                    >
                                </TextView>

<!--                        토핑추가-->
                                <LinearLayout
                                    android:id="@+id/selectedItemAddToping"
                                    android:layout_width="70dp"
                                    android:layout_margin="5dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/layout_rounded_darkred"
                                    >

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="토핑추가"
                                        android:layout_gravity="center"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:textSize="12dp">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    >

                                    <!--            변경    -->
                                    <LinearLayout
                                        android:id="@+id/selectedItemEdit"
                                        android:layout_width="35dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/layout_border5_gray"
                                        >

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="변경"
                                            android:layout_gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textSize="12dp">

                                        </TextView>

                                    </LinearLayout>

                                    <!--            삭제    -->
                                    <LinearLayout
                                        android:id="@+id/seletecItemDelete"
                                        android:layout_width="35dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/layout_border5_gray"
                                        >

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="삭제"
                                            android:layout_gravity="center"
                                            android:textAlignment="center"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textSize="12dp">

                                        </TextView>

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/selectedOrderItemBar2"
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:orientation="horizontal"
                                android:background="#424242">
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/selectedOrderItemBar3"
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:orientation="horizontal"
                                android:background="@color/black">
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/selectedOrderItemBar4"
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:orientation="horizontal"
                                android:background="#424242">
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>

<!--        up, down button-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:padding="2dp"
                    >

                    <LinearLayout
                        android:id="@+id/upButton"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="@drawable/layout_border5_gray"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/formkit_up"
                            android:layout_gravity="center">
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/downButton"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="@drawable/layout_border5_gray"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/formkit_down"
                            android:layout_gravity="center">
                        </ImageView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!--<Here>-->

        <!--bottom bar-->
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9D9D9"
            android:orientation="horizontal"

            >

            <!--직원 호출-->
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:src="@drawable/speaker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="직원호출"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp">

                </TextView>

            </LinearLayout>
            <!--이전-->
            <LinearLayout
                android:id="@+id/beforeButton"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:src="@drawable/left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="이전"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp">

                </TextView>

            </LinearLayout>
            <!--취소하기-->
            <LinearLayout
                android:id="@+id/cancel_button"
                android:layout_marginLeft="50dp"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_border4_darkgray"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:layout_marginTop="10dp"
                    android:text="취소하기"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    tools:ignore="RtlCompat"></TextView>

            </LinearLayout>
            <!--결제하기-->
            <LinearLayout
                android:id="@+id/payment_button"
                android:layout_marginLeft="2dp"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_border1_yellow"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="결제하기"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    tools:ignore="RtlCompat"></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fastfoods.FastFoodHome2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!--빨간 배경-->
            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#A81717">

                <!--흰색 배경-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    >

                    <TextView
                        android:id="@+id/textView"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="고객님들의\n안전과 질병 예방을 위해\n무인포스는 매시간 살균, 소독을\n실시하고 있습니다."
                        android:fontFamily="@font/poppins_extrabold"
                        android:textSize="13.8dp"
                        android:textColor="@color/black"
                        tools:ignore="RtlCompat">
                    </TextView>

                </LinearLayout>
            </LinearLayout>
            <!--TitleScrollView-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#EAC9C9"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/TabTitleLeftBtn"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/left_round"/>

                <HorizontalScrollView
                    android:id="@+id/TabBarTitleHorizontalScroll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/TabBarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent">

                            <!-- Background View (your tab indicator) -->
                            <View
                                android:id="@+id/lunchView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tab_indicator"
                                android:visibility="visible"
                                />

                            <!-- TextView -->
                            <TextView
                                android:id="@+id/TitleLunch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="든든점심"
                                android:fontFamily="@font/poppins_extrabold"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </FrameLayout>



                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent">

                            <!-- Background View (your tab indicator) -->
                            <View
                                android:id="@+id/hamburgerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tab_indicator"
                                android:visibility="invisible"

                                />

                            <!-- TextView -->
                            <TextView

                                android:id="@+id/TitleHamburger"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:text="햄버거"
                                android:fontFamily="@font/poppins_extrabold"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            >

                            <!-- Background View (your tab indicator) -->
                            <View
                                android:id="@+id/DessertView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tab_indicator"
                                android:visibility="invisible"

                                />

                            <!-- TextView -->
                            <TextView
                                android:id="@+id/TitleDessert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="디저트/치킨"
                                android:fontFamily="@font/poppins_extrabold"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="75dp"
                            android:layout_height="match_parent">

                            <!-- Background View (your tab indicator) -->
                            <View
                                android:id="@+id/DrinkView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tab_indicator"
                                android:visibility="invisible"

                                />

                            <!-- TextView -->
                            <TextView
                                android:id="@+id/TitleDrink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="음료수"
                                android:fontFamily="@font/poppins_extrabold"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </FrameLayout>
                    </LinearLayout>

                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/TabTitleRightBtn"
                    android:layout_marginRight="5dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_round"/>

            </LinearLayout>

            <include
                android:id="@+id/fastfood_tab1"
                layout="@layout/activity_fastfood_tab1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"


                />
            <LinearLayout
                android:id="@+id/totalOrderCountBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="#D9D9D9"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/totalOrderedList"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="총주문내역"
                    android:paddingLeft="16dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    >

                </TextView>

                <TextView
                    android:id="@+id/SelectedOrderCount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="0개"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"

                    >

                </TextView>

                <TextView
                    android:id="@+id/SelectedOrderPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="23dp"
                    android:textColor="#D00000"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingRight="16dp"
                    >

                </TextView>






            </LinearLayout>

            <LinearLayout
                android:id="@+id/SelectedOrderBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_weight="2"
                android:orientation="vertical"
                >

            </LinearLayout>


        </LinearLayout>

        <!--<Here>-->

        <!--bottom bar-->
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9D9D9"
            android:orientation="horizontal"

            >

            <!--직원 호출-->
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:src="@drawable/speaker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="직원호출"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp">

                </TextView>

            </LinearLayout>
            <!--이전-->
            <LinearLayout
                android:id="@+id/beforeButton"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:src="@drawable/left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="이전"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp">

                </TextView>

            </LinearLayout>
            <!--취소하기-->
            <LinearLayout
                android:id="@+id/cancel_button"
                android:layout_marginLeft="50dp"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_border4_darkgray"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:layout_marginTop="10dp"
                    android:text="취소하기"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    tools:ignore="RtlCompat"></TextView>

            </LinearLayout>
            <!--결제하기-->
            <LinearLayout
                android:id="@+id/payment_button"
                android:layout_marginLeft="2dp"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_border1_yellow"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="결제하기"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    tools:ignore="RtlCompat"></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
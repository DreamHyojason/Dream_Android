<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.ade">




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        >



        <GridLayout
            android:id="@+id/dessert1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="더블 초코칩 쉐이크"
                android:textSize="15dp"
                android:textColor="@color/black" />

        </GridLayout>

        <!--2 양념감자-->
        <GridLayout
            android:id="@+id/dessert2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="피스타치오 쉐이크"
                android:textSize="15dp"
                android:textColor="@color/black" />

        </GridLayout>


        <GridLayout
            android:id="@+id/dessert3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="오리진 쉐이크"
                android:textSize="15dp"
                android:textColor="@color/black" />

        </GridLayout>


        <GridLayout
            android:id="@+id/dessert4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds">

            <TextView
                android:layout_width="wrap_content"
                android:layout_rowWeight="1"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="초코쿠키 쉐이크"
                android:textSize="15dp"
                android:textColor="@color/black" />

        </GridLayout>



    </GridLayout>
</FrameLayout>
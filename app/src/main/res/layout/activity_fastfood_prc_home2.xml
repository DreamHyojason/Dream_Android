<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fastfoods.FastFoodHome2Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="13"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/FastFoodHome"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/hyoja_home"
                android:layout_marginLeft="10dp"/>
            <!--빨간 배경-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#A81717">

                <!--흰색 배경-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    >

                    <TextView
                        android:id="@+id/textView"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="고객님들의\n안전과 질병 예방을 위해\n무인포스는 매시간 살균, 소독을\n실시하고 있습니다."
                        android:fontFamily="@font/poppins_extrabold"
                        android:textColor="@color/black"
                        android:autoSizeTextType="uniform"
                        tools:ignore="RtlCompat">
                    </TextView>

                </LinearLayout>
            </LinearLayout>
            <!--TitleScrollView-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#EAC9C9"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/TabTitleLeftBtn"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/left_round"/>

                <HorizontalScrollView
                    android:background="@null"
                    android:id="@+id/TabBarTitleHorizontalScroll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">
                    <FrameLayout
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.viewpager2.widget.ViewPager2
                            android:background="@null"
                            android:id="@+id/FastFoodCategoryList"
                            android:layout_width="500dp"
                            android:layout_height="match_parent"/>

                    </FrameLayout>

                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/TabTitleRightBtn"
                    android:layout_marginRight="5dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_round"/>

            </LinearLayout>

            <FrameLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="460dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/FoodMenuList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/FoodMenuListListLeftButton"
                    android:background="@null"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:src="@drawable/icon_left_un"
                    android:layout_margin="5dp"
                    android:layout_gravity="left|center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageButton
                    android:id="@+id/FoodMenuListListRightButton"
                    android:background="@null"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:src="@drawable/icon_right"
                    android:layout_margin="5dp"
                    android:layout_gravity="right|center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </FrameLayout>

            <!--            총주문내역-->
            <LinearLayout
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="3"
                    android:id="@+id/totalOrderCountBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D9D9D9"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/totalOrderedList"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="총주문내역"
                        android:paddingLeft="16dp"
                        android:fontFamily="@font/poppins_extrabold"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:gravity="center|left"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/TotalOrderCount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="0개"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"

                        >

                    </TextView>

                    <TextView
                        android:id="@+id/TotalOrderPrice"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="23dp"
                        android:textColor="#D00000"
                        android:gravity="center|end"
                        android:paddingRight="16dp"
                        >

                    </TextView>
                </LinearLayout>

                <!--            선택한 메뉴 저장 Bar-->
                <LinearLayout
                    android:id="@+id/SelectedOrderBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <!--            선택 메뉴 저장 칸 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="@color/white">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/FoodSelectedList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <!--        up, down button-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:padding="2dp"
                        >

                        <LinearLayout
                            android:id="@+id/upButton"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/layout_border5_gray"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/formkit_up"
                                android:layout_gravity="center">
                            </ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/downButton"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/layout_border5_gray"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/formkit_down"
                                android:layout_gravity="center">
                            </ImageView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!--<Here>-->

        <!--bottom bar-->
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#D9D9D9"
            android:orientation="horizontal"

            >


            <!--취소하기-->
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_border4_darkgray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="취소하기"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:padding="5dp"
                    tools:ignore="RtlCompat"></TextView>

            </LinearLayout>
            <!--결제하기-->
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/payment_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_border1_yellow"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PayBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textColor="@color/black"
                    android:text="결제하기"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:autoSizeTextType="uniform"

                    android:gravity="center"
                    tools:ignore="RtlCompat"></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB000000">

    </FrameLayout>

</FrameLayout>


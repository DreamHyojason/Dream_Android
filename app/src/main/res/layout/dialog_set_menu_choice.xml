<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_rounded_white"
    android:backgroundTint="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fastfoods.SetMenuTabActivity"
    >
    <!--전체-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F6D492"
                android:orientation="horizontal"
                >

                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세트디저트 2개를 선택해주세요"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="20dp"
                    android:textColor="@color/black"

                    >

                </TextView>


            </LinearLayout>

            <!--    바디 탭-->
            <LinearLayout
                android:id="@+id/setMenuBody"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical"
                >
                <!--            body-->

                <!--            bottom-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#EDA518"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/TabTitleLeftBtn_setmenu"
                        android:layout_marginLeft="5dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/left_round"/>

                    <HorizontalScrollView
                        android:id="@+id/TabBarTitleHorizontalScroll_setmenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/TabBarTitle_setmenu"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">

                            <FrameLayout
                                android:layout_width="130dp"
                                android:layout_height="match_parent">

                                <!-- Background View (your tab indicator) -->
                                <View
                                    android:id="@+id/lunchView_setmenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tab_indicator"
                                    android:visibility="visible"
                                    />

                                <!-- TextView -->
                                <TextView
                                    android:id="@+id/TitleLunch_setmenu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="세트_디저트"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_marginLeft="5dp"
                                android:layout_width="130dp"
                                android:layout_height="match_parent">

                                <!-- Background View (your tab indicator) -->
                                <View
                                    android:id="@+id/hamburgerView_setmenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tab_indicator"
                                    android:visibility="invisible"

                                    />

                                <!-- TextView -->
                                <TextView

                                    android:id="@+id/TitleHamburger_setmenu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:text="세트_드링크"
                                    android:fontFamily="@font/poppins_extrabold"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />
                            </FrameLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/TabTitleRightBtn_setmenu"
                        android:layout_marginRight="5dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_round"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="520dp"
                    android:background="@color/black"/>
<!--                <androidx.constraintlayout.widget.ConstraintLayout-->
<!--                    xmlns:tools="http://schemas.android.com/tools"-->
<!--                    android:layout_height="520dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    >-->

<!--                    <androidx.viewpager2.widget.ViewPager2-->
<!--                        android:background="@color/white"-->
<!--                        android:id="@+id/SetmenuViewPager"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        />-->
<!--                </androidx.constraintlayout.widget.ConstraintLayout>-->
<!--                <include-->
<!--                    android:id="@+id/fastfood_setmenu"-->
<!--                    layout="@layout/activity_body_setmenu"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="520dp"-->
<!--                    />-->

            </LinearLayout>

            <!--     bottom bar -->


        </LinearLayout>


        <LinearLayout
            android:layout_weight="11"
            android:id="@+id/setMenuBottomBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <!--        선택 수량-->
            <LinearLayout
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_width="0dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:layout_gravity="center"

                android:background="@drawable/layout_border1_yellow"
                >

                <!--                선택 수량-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/layout_round_darkred1"
                        >

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="선택 수량    :   "
                        android:textColor="@color/black"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/selectCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/poppins_extrabold"
                        android:textSize="12dp"
                        android:textColor="@color/black">

                    </TextView>

                </LinearLayout>
                <!--                잔여 수량-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/layout_round_darkred1"
                        >

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="잔여 수량    :   "
                        android:textColor="@color/black"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/remainedCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:fontFamily="@font/poppins_extrabold"
                        android:textSize="12dp"
                        android:textColor="@color/black">

                    </TextView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:id="@+id/cancel_button"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_border4_darkgray"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/setmenu_cancel_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="취소하기"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        >

                    </TextView>

                </LinearLayout>
                <!--결제하기-->
                <LinearLayout
                    android:id="@+id/payment_button"
                    android:layout_margin="2dp"
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/layout_border1_yellow"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_extrabold"
                        android:textColor="@color/black"
                        android:text="결제하기"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        ></TextView>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
